<!-- index.wxml -->
<view class="quest">
  <view class="merchants" >
    <view class="merchant" wx:for="{{merchants}}" wx:key="*this">
      <view class="avatar-box" bindtap="hop">
        <image class="avatar" src="{{item.avatar}}" />
        <view class="amount">{{item.questAmount}}</view>
      </view>
      <view class="name">{{item.name}}</view>
    </view>
  </view>
</view>